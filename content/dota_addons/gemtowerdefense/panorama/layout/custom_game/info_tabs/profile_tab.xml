<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/info_tabs/profile_tab.css"/>  
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/info_tabs/profile_tab.js"/>
  </scripts>
  <Panel class="profile-root">
      <Panel class="profile-inner">
          <Panel class="profile-player">
              <DOTAAvatarImage id="profile-player-avatar" />
              <Panel class="profile-player-column">
                  <DOTAUserName id="profile-player-username" />
                  <Panel class="profile-player-rank">
                      <Panel class="player-rank">
                          <Panel class="player-rank-overlay" />
                          <Panel class="player-rank-wrap">
                              <Label class="player-rank-label" text="Rank:" />
                              <Label id="player-rank-value" text="10" />
                          </Panel>
                      </Panel>
                  </Panel>
              </Panel>
              <Panel id="player-level-container" />
          </Panel>
          <Panel class="profile-stats">
              <Label class="profile-stats-header" text="Your stats" />
          </Panel>
      </Panel>
  </Panel>
</root>